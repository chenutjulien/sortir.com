{% extends 'base.html.twig' %}

{% block title %}Liste des lieux{% endblock %}

{% block main %}
<br>
    <div class="container-fluid bgdiv">
    <h1>Liste des lieux</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Rue</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for spot in spots %}
            <tr>
                <td>{{ spot.id }}</td>
                <td>{{ spot.name }}</td>
                <td>{{ spot.street }}</td>
                <td>{{ spot.latitude }}</td>
                <td>{{ spot.longitude }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('spot_show', {'id': spot.id}) }}">Voir</a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-warning ml-3" href="{{ path('spot_edit', {'id': spot.id}) }}">Editer</a>
                     {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de lieu enregistré.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('spot_new') }}">Créer un nouveau lieu</a>
    </div>
{% endblock %}
