{% extends 'base.html.twig' %}

{% block title %}Liste des sorties{% endblock %}

{% block main %}
<div class="container-fluid bgdiv">
    <div class="text-right"><h5>{{ app.user.firstname }} {{ app.user.name }} </h5></div>
    <div class="text-right"><h6>{{ "now"|date("d/m/Y") }} </h6></div>
    <h3>Liste des sorties </h3>
    {{ include('inc/filter.trip.html.twig') }}
    <table class="table">
        <thead>
            <tr>
{#                <th>Id</th>#}
                <th>Site</th>
                <th>Nom</th>
                <th>Ville</th>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th>Nbre de places</th>
{#                <th>Informations</th>#}
                <th>Organisateur</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
        {% for trip in trips %}

            <tr>
                <td>{{ trip.organiser.site.name }}</td>
                <td>{{ trip.name }}</td>
                <td>{{ trip.spot.city.name }}</td>
                <td>{{ trip.startDateTime ? trip.startDateTime|date('d-m-Y H:i') : '' }}</td>
                <td>{{ trip.endDateTime ? trip.endDateTime|date('d-m-Y H:i') : '' }}</td>
                <td>{{ trip.maxRegistration }}</td>
{#                <td>{{ trip.informations }}</td>#}
                <td><a href="{{ path('user_voirprofil', {'id': trip.organiser.id}) }}">{{ trip.organiser.username }}</a></td>
                <td>{{ trip.state.name }}</td>

                <td>
                    <a class="btn btn-info" href="{{ path('trip_show', {'id': trip.id}) }}">Voir</a>
                    {% if trip.organiser.id == app.user.id %}
                        /<a class="btn btn-warning" href="{{ path('trip_edit', {'id': trip.id}) }}">Editer</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Pas de sortie enregistrée.</td>
            </tr>

        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('trip_new') }}">Créer une nouvelle sortie</a>
</div>
{% endblock %}
