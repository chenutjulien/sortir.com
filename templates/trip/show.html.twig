{% extends 'base.html.twig' %}

{% block title %}Trip{% endblock %}

{% block main %}
    <br>


        <div class="card" style="width: 100rem;">
            <div class="card-body">
                <h3 class="card-title">Détail de la sortie - Proposée par {{ trip.organiser.username }}</h3>
                <h4 class="card-subtitle mb-2 text-muted">{{ trip.name }} du {{ trip.startDateTime ? trip.startDateTime|date('Y-m-d H:i:s') : ''}}
                au {{ trip.endDateTime ? trip.endDateTime|date('Y-m-d H:i:s') : '' }}</h4>
                <p class="card-text">{{ trip.informations }}</p>
                <p class="card-text">{{ trip.maxRegistration }}</p>
                <a href="{{ path('trip_index') }}" class="card-link">Retour à la liste</a>
                {% if trip.organiser.id == user.id %}
                <a href="{{ path('trip_edit', {'id': trip.id}) }}" class="card-link">Modifier</a>
                    {{ include('trip/_delete_form.html.twig') }}
                {% else %}
                    {% if trip.startDateTime|date('m/d/Y') > "now"|date('m/d/Y') %}
                <form action="trip_show">
                    <input type="hidden" value="inscription" name="inscription">
                    <button type="submit" ><a href="{{ path('trip_show', {'id': trip.id}) }}" class="card-link">S'inscrire</a></button>
                </form>
{% endif %}
                {% endif %}

            </div>
        </div>






