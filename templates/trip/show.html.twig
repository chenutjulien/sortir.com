{% extends 'base.html.twig' %}

{% block title %}Trip{% endblock %}

{% block main %}
    <br>
    <div class="container">
        <h3>Detail du site</h3>
        <table class="table">
            <thead>
            <tr>
                <th>Nom du site</th>
                <th>Date de début</th>
                <th>Nombre d'inscrits</th>
                <th>Informations</th>
                <th>Date de fin</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <td>{{ trip.name }}</td>
            <td>{{ trip.startDateTime ? trip.startDateTime|date('Y-m-d H:i:s') : ''}}</td>
            <td>{{ trip.maxRegistration }}</td>
            <td>{{ trip.informations }}</td>
            <td>{{ trip.endDateTime ? trip.endDateTime|date('Y-m-d H:i:s') : '' }}</td>
            <td><a href="{{ path('trip_index') }}">Retour à la liste</a> /
                <a href="{{ path('trip_edit', {'id': site.id}) }}">Modifier</a></td>
            </tbody>

        </table>



        {{ include('trip/_delete_form.html.twig') }}
    </div>

