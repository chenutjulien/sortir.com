{% extends 'base.html.twig' %}

{% block title %}Site index{% endblock %}

{% block main %}
    <br>
    <h3>Liste des sites</h3>
<div class="container">
    <table class="table">
        <thead>
            <tr>
{#                <th>Id</th>#}
                <th>Nom du site</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
{#                <td>{{ site.id }}</td>#}
                <td>{{ site.name }}</td>
                <td>
                    <a href="{{ path('site_show', {'id': site.id}) }}">Voir</a>
                    <a href="{{ path('site_edit', {'id': site.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de site disponibles</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('site_new') }}">Cr√©er un nouveau site</a>
</div>
{% endblock %}
