    <div class="container-fluid bgdiv">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") and user.active==1 %}
            <h4>Bienvenue  {{ app.user.username }} sur Sortir.com</h4>
        {% else %}
            <h1>Bienvenue sur Sortir.com</h1>
