{% extends 'base.html.twig' %}

{% block main %}
    <p> Ici.</p>
    <table class="table">
        <thead>
        <tr>
            <th>Identifiant</th>
            <th>Site</th>
            <th>Pseudo</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>courriel</th>
            <th>Statut</th>
        </tr>
        </thead>
        <tbody>

        {% for user in users %}
            <tr>
                <td>
                    {{ user.id }}
                </td>
                <td> {{ user.site.id }}</td>
                <td> {{ user.username }}</td>
                <td> {{ user.name }}</td>
                <td> {{ user.firstname }}</td>
                <td> {{ user.mail }}</td>
                <td> {% if user.active==1 %}
                        <p>actif</p>

                        <form method="post" action="{{ path("user_inactive", {'id': user.id}) }}">
                            <input type="hidden" id="desactive" name="desactive">
                            <button type="submit">Désactiver</button>
                        </form>


                    {% else %}
                        <p>inactif</p>
                        <form method="post" action="{{ path("user_active", {'id': user.id}) }}">
                            <input type="hidden" id="active" name="active">
                            <button type="submit">Réactiver</button>
                        </form>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}

