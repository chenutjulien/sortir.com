{% extends 'base.html.twig' %}

{% block main %}
    <table class="table">
        <thead>
        <tr>
{#            <th>Identifiant</th>#}
            <th>Site</th>
            <th>Pseudo</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>courriel</th>
            <th>Statut</th>
        </tr>
        </thead>
        <tbody>

        {% for user in users %}
            <tr>
{#                <td>#}
{#                    {{ user.id }}#}
{#                </td>#}
                <td> {{ user.site.name }}</td>
                <td> {{ user.username }}</td>
                <td> {{ user.name }}</td>
                <td> {{ user.firstname }}</td>
                <td> {{ user.mail }}</td>
                <td> {% if user.active==1 %}
{#                        <p>actif</p>#}

                        <form method="post" action="{{ path("user_inactive", {'id': user.id}) }}">
                            <input type="hidden" id="desactive" name="desactive">
                            <button class="btn btn-warning" type="submit">Désactiver</button>
                        </form>


                    {% else %}
{#                        <p>inactif</p>#}
                        <form method="post" action="{{ path("user_active", {'id': user.id}) }}">
                            <input type="hidden" id="active" name="active">
                            <button class="btn btn-success" type="submit">Réactiver</button>
                        </form>
                    {% endif %}
                    <a class="btn btn-primary mt-3" href="{{ path('user_voirprofil', {'id': user.id}) }}" class="card-link">Voir le profil</a><br>
                    <form method="post" action="{{ path("user_delete", {'id': user.id}) }}">
                        <input type="hidden" id="delete" name="delete">
                        <button class="btn btn-danger mt-3" type="submit">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}

